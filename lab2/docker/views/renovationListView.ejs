<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Renovation List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body class="container py-5">
    <h1 class="text-center text-primary mb-4">Renovation Tips</h1>
    <div class="row">
        <!-- Список порад -->
        <div class="col-md-8">
            <ul class="list-group shadow-sm">
                <% renovations.forEach(renovation => { %>
                    <li class="list-group-item d-flex flex-column">
                        <a class="fw-bold text-decoration-none text-dark" href="/item/<%= renovation.id %>">
                            <%= renovation.name %>:
                        </a>
                        <span class="text-muted"><%= renovation.description %></span>
                    </li>
                <% }) %>
            </ul>
        </div>
        <!-- Блок для додавання нової поради -->
        <div class="col-md-4">
            <form class="d-flex flex-column gap-3 shadow-sm p-4 border rounded" action="/create" method="POST">
                <h5 class="text-center text-secondary">Add a New Renovation Tip</h5>
                <input type="text" class="form-control" name="name" placeholder="Enter idea title" required>
                <input type="text" class="form-control" name="description" placeholder="Enter idea description" required>
                <button type="submit" class="btn btn-primary">Add Renovation</button>
            </form>
        </div>
    </div>

    <div class="row justify-content-center mt-3">
        <div class="col-auto">
            <div class="d-flex gap-2">
                <form action="/privacy" method="GET">
                    <button type="submit" class="btn btn-outline-secondary">Privacy</button>
                </form>
                <form action="/about" method="GET">
                    <button type="submit" class="btn btn-outline-secondary">About</button>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>
